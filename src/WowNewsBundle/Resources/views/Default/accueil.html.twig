{% endblock %}

{% block body %}
<section class='container'>
        {% set i = 0 %}
        {% for article in articles %}
            {% if i%2 == 0 %}
                <article class='row articles_liste'>
                    <img src= {{asset('assets/image/'~article.image.image~'')}} class='img-fluid col-6 img_article'>
                    <div class='col-6'>
                        <div class='row'>
                            <h3 class='col-12'><a href={{path('wow_news_article', {'template': template, 'id': article.id})}}>{{article.title}}</a></h3>
                            <p class='col-12'>{{article.intro}}</p>
                        </div>
                    </div>
                </article>
            {% elseif i%2 == 1 %}
               <article class='row articles_liste'>
                    <div class='col-6'>
                        <div class='row'>
                            <h3 class='col-12'><a href={{path('wow_news_article', {'template': template, 'id': article.id})}}>{{article.title}}</a></h3>
                            <p class='col-12'>{{article.intro}}</p>
                        </div>
                    </div>
                    <img src= {{asset('assets/image/'~article.image.image~'')}} class='img-fluid col-6 img_article'>
                </article> 
            {% endif %}
            {% set i = i + 1 %}
        {% endfor %}

</section>

{% endblock %}